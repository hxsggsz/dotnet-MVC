@model MVC.Models.Contato

@{
  ViewData["Title"] = "Editar - contatos";
}

<h1>Editar o contato</h1>

<div class="row">
  <div class="col-md-4">

    <form asp-action="Editar">

      <div class="form-group">
        <label asp-for="Name" class="control-label">Nome</label>
        <input asp-for="Name" class="form-control" type="text" />
      </div>

      <div class="form-group">
        <label asp-for="Telefone" class="control-label">Telefone</label>
        <input asp-for="Telefone" class="form-control" type="text" />
      </div>

      <div class="form-group">
        <label asp-for="Ativo" class="control-label">Esse número é ativo?</label>
        <input asp-for="Ativo" class="form-check-input" type="checkbox" />
      </div>

      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
  </div>
</div>